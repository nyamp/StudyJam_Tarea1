<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3a3b3d</item>
        <item name="colorPrimaryDark">#3a3b3d</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

        <style name="editText_style">
            <item name="android:gravity">center</item>
            <item name="android:background">@drawable/editext_background</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginLeft">60dp</item>
            <item name="android:layout_marginRight">30dp</item>
            <item name="android:textColor">#494747</item>
        </style>

    <style name="button_style" >
        <item name="android:background">@drawable/button_background</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">35dp</item>
            //item name="layout_marginTop=">10dp"/item>
            <item name="android:layout_marginLeft">90dp</item>
            <item name="android:layout_marginRight">90dp</item>
        <item name="android:layout_marginTop">10dp</item>
            <item name="android:textSize">20sp</item>

    </style>

    <style name="bfb_style" >
        <item name="android:background">@drawable/buttonfb</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        //item name="layout_marginTop=">10dp"/item>
        <item name="android:layout_marginLeft">70dp</item>
        <item name="android:layout_marginRight">70dp</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="email_style" >
        <item name="android:background">@drawable/bemail</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        //item name="layout_marginTop=">10dp"/item>
        <item name="android:layout_marginLeft">70dp</item>
        <item name="android:layout_marginRight">70dp</item>
        //item name="android:layout_marginTop">7dp/item>
        <item name="android:textSize">15sp</item>

    </style>

</resources>
